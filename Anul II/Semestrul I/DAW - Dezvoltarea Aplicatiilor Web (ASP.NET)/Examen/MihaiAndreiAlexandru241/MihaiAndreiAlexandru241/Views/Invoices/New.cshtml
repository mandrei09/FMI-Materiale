@model MihaiAndreiAlexandru241.Models.Invoice


<h2 class="text-center mt-5">Adaugare Factura</h2>
<br />
<div class="container mt-5">
    <div class="row">
        <div class="col-6 offset-3">

            @using (Html.BeginForm(actionName: "New", controllerName: "Invoices",
            method: FormMethod.Post))
            {

                @Html.ValidationSummary(false, "", new { @class = "text-danger" })

                @Html.Label("Titlu", "Titlul facturii")
                <br />
                @Html.TextBox("Denumire", null, new { @class = "form-control" })

                @Html.ValidationMessageFor(m => m.Titlu, "", new { @class = "text-danger" })
                <br />

                <br />


                <br />

                @Html.Label("DataScadenta", "Data Scadenta")
                <br />
                @Html.TextArea("DataScadenta", null, new { @class = "form-control" })

                @Html.ValidationMessage("DataScadenta", null, new { @class = "text-danger" })
                <br />

                <br />
                <label>Selectati numele clientului</label>
                @Html.DropDownListFor(m => m.ClientId, new SelectList(Model.Clients, "Value", "Text"), "Selectati clientul", new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.ClientId, null, new { @class = "text-danger" })
                <br />

                <br />

                <button class="btn btn-success" type="submit">Adauga factura</button>

            }

        </div>
    </div>
</div>








