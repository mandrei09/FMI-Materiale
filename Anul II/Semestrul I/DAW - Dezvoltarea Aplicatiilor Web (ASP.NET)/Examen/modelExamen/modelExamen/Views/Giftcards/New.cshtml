@model modelExamen.Models.Giftcard


<h2 class="text-center mt-5">Adaugare Card</h2>
<br />
<div class="container mt-5">
    <div class="row">
        <div class="col-6 offset-3">

            @using (Html.BeginForm(actionName: "New", controllerName: "Giftcards",
            method: FormMethod.Post))
            {

                @Html.ValidationSummary(false, "", new { @class = "text-danger" })

                @Html.Label("Denumire", "Denumirea cardului")
                <br />
                @Html.TextBox("Denumire", null, new { @class = "form-control" })

                @Html.ValidationMessageFor(m => m.Denumire, "", new { @class = "text-danger" })
                <br />

                <br />

                @Html.Label("Descriere", "Descriere card")
                <br />
                @Html.TextArea("Descriere", null, new { @class = "form-control" })

                @Html.ValidationMessage("Descriere", null, new { @class = "text-danger" })
                <br />

                <br />

                @Html.Label("Procent", "Procent card")
                <br />
                @Html.TextArea("Procent", null, new { @class = "form-control" })

                @Html.ValidationMessage("Procent", null, new { @class = "text-danger" })
                <br />

                <br />


                @Html.Label("DataExp", "Data Expirare")
                <br />
                @Html.TextArea("DataExp", null, new { @class = "form-control" })

                @Html.ValidationMessage("DataExp", null, new { @class = "text-danger" })
                <br />

                <br />
                <label>Selectati brandul</label>
                @Html.DropDownListFor(m => m.BrandId, new SelectList(Model.Brd, "Value", "Text"), "Selectati bradul", new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.BrandId, null, new { @class = "text-danger" })
                <br />

                <br />

                <button class="btn btn-success" type="submit">Adauga articol</button>

            }

        </div>
    </div>
</div>








